    <script type="text/javascript">
        $(document).ready(function () {
            $("#alphabetcontainer").each(function () {
                for (var i in JGeezUtility.UNICODEMatrix) {
                    _row = $("<div></div>");
                    _row.css({ "padding-top": "5px" });

                    _englishcaption = $("<div></div>");
                    _englishcaption.css({ "text-align": "right"
                    , "width": "120px"
                    , "height": "20px"
                    , "float": "left"
                    });

                    _englishcaption.append('<a class="alphabetkey" >' + JGeezUtility.UNICODEMatrix[i][1].toLowerCase() + '</a>');
                    if (JGeezUtility.UNICODEMatrix[i][2]
                    || (JGeezUtility.UNICODEMatrix[i][1].toLowerCase() != JGeezUtility.UNICODEMatrix[i][1]
                        && JGeezUtility.UNICODEMatrix[i].length==2))
                        _englishcaption.append('<a class="alphabetshiftkey" >&nbsp</a>');
                    if (JGeezUtility.UNICODEMatrix[i][3])
                        _englishcaption.append('<a class="alphabetcapskey" >CAPS</a>');
                    _row.append(_englishcaption);

                    _row.append('<a style="" class="geezalphabet geeztext">' + JGeezUtility.UNICODE(Character(JGeezUtility.UNICODEMatrix[i][1], JGeezUtility.UNICODEMatrix[i][2], 0)) + '</a>');
                    if (!JGeezUtility.isModifier(JGeezUtility.UNICODEMatrix[i][1])) {
                        _row.append('<a style="" class="geezalphabet geeztext">' + JGeezUtility.UNICODE(Character(JGeezUtility.UNICODEMatrix[i][1] + "u", JGeezUtility.UNICODEMatrix[i][2], 0)) + '</a>');
                        _row.append('<a style="" class="geezalphabet geeztext">' + JGeezUtility.UNICODE(Character(JGeezUtility.UNICODEMatrix[i][1] + "i", JGeezUtility.UNICODEMatrix[i][2], 0)) + '</a>');
                        _row.append('<a style="" class="geezalphabet geeztext">' + JGeezUtility.UNICODE(Character(JGeezUtility.UNICODEMatrix[i][1] + "a", JGeezUtility.UNICODEMatrix[i][2], 0)) + '</a>');
                        _row.append('<a style="" class="geezalphabet geeztext">' + JGeezUtility.UNICODE(Character(JGeezUtility.UNICODEMatrix[i][1] + "y", JGeezUtility.UNICODEMatrix[i][2], 0)) + '</a>');
                        _row.append('<a style="" class="geezalphabet geeztext">' + JGeezUtility.UNICODE(Character(JGeezUtility.UNICODEMatrix[i][1] + "e", JGeezUtility.UNICODEMatrix[i][2], 0)) + '</a>');
                        _row.append('<a style="" class="geezalphabet geeztext">' + JGeezUtility.UNICODE(Character(JGeezUtility.UNICODEMatrix[i][1] + "o", JGeezUtility.UNICODEMatrix[i][2], 0)) + '</a>');
                    }
                    _row.append('<br class="reset"/>');

                    $(this).append(_row);
                }
            });
        });
    </script>

